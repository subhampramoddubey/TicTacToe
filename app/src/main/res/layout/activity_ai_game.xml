<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/backgroundimg"
    android:layout_height="match_parent"
    tools:context=".AiGameActivity">

    <ImageView
        android:id="@+id/Ai_game_back_btn"
        android:layout_width="35dp"
        android:padding="4dp"
        android:layout_height="52dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/back_icon"
        android:background="@drawable/button_style"
        android:backgroundTint="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="35dp"
        android:background="@drawable/button_style"
        android:backgroundTint="@color/white"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight=".3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:lottie_rawRes="@raw/robot_animi"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>


        <TextView
            android:id="@+id/robot_name_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="Robot"
            android:textColor="@color/black"
            android:textSize="14sp"/>



        <TextView
            android:id="@+id/player_two_won_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="28dp"
            android:text="6"
            android:layout_weight=".3"
            android:textSize="20dp"
            android:textColor="#353535"
            android:layout_gravity="center"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="342dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:background="@drawable/grid">



        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="0dp"
            android:layout_weight=".33"
            android:orientation="horizontal"
            >



            <ImageView
                android:tag="1"
                android:id="@+id/img_1"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:padding="15dp"
                android:layout_height="match_parent"
                />



            <ImageView
                android:tag="2"
                android:id="@+id/img_2"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:padding="15dp"
                android:layout_height="match_parent"
                />




            <ImageView
                android:tag="3"
                android:id="@+id/img_3"
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:padding="15dp"
                android:layout_height="match_parent"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="0dp"
            android:layout_weight=".33"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >



            <ImageView
                android:tag="4"
                android:id="@+id/img_4"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent"
                />



            <ImageView
                android:tag="5"
                android:id="@+id/img_5"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent"
                />




            <ImageView
                android:tag="6"
                android:id="@+id/img_6"
                android:layout_width="0dp"
                android:layout_weight="3.1"
                android:padding="15dp"
                android:layout_height="match_parent"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="0dp"
            android:layout_weight=".33"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >




            <ImageView
                android:tag="7"
                android:id="@+id/img_7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_height="match_parent"
                />



            <ImageView
                android:tag="8"
                android:id="@+id/img_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_height="match_parent"
                />




            <ImageView
                android:tag="9"
                android:id="@+id/img_9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:layout_height="match_parent"
                />


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="35dp"
        android:background="@drawable/button_style"
        android:backgroundTint="@color/white"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/player_one_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/user_profile"
            app:civ_shadow="true"
            app:civ_shadow_radius="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/player_one_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Shubham"
            android:layout_marginLeft="11dp"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="..."
            android:textColor="@color/black"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/player_one_win_count_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="28dp"
            android:textAlignment="viewEnd"
            android:text="6"
            android:textSize="20dp"
            android:textColor="#353535"
            android:layout_gravity="center"
            android:gravity="center"
            />

    </LinearLayout>


    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_gravity="center"
        android:elevation="4dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="40dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/Ai_game_seting_gifview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7.5dp"
            android:layout_gravity="center"
            android:src="@drawable/settings_gif" />


    </androidx.cardview.widget.CardView>


</LinearLayout>